---

- hosts: all
  become: true
  tasks: 
  
  - name: updating yum repositories
    yum:
      update_cache: yes
    when: ansible_pkg_mgt == "yum"
    
  - name: updating apt repositories
    apt:
      update_cache: yes
    when: ansible_pkg_mgt == "apt"

  - name: installing net-tools package for yum
    yum:
      name: net-tools
      state: latest
    when: ansible_pkg_mgt == "yum"
  
  - name: installing net-tools package for apt
    apt:
      name: net-tools
      state: latest 
    when: ansible_pkg_mgt == "apt"
